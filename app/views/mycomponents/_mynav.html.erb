<div class="user-reverlator pt-3 pe-3 text-end">
    <% if client_signed_in? %>
      <span class="><span class="fw-bold">Sesión iniciada como:</span> <%=current_client.name%></span> <br>
      <span class="><span class="fw-bold">Rol:</span> <%=current_client.role.to_s%></span>
    <%else%>
    <%end%>
  </div>


  <nav class="navbar navbar-expand-lg mynav p-0">
      <div class="container-fluid mx-5 py-4">
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav nav-link fs-5 mydafont">
            <div class="mywidth mylinks">
                <%= image_tag 'logo.png', class: "mylogo w-100" %>
            </div>
            <%= link_to "Inicio", root_path, class: "nav-link fw-bold px-4 mylinks ms-5 d-flex align-items-center" %>
              <% if client_signed_in? %>
                  <%= link_to "Mi cuenta", edit_client_registration_path, class: "nav-link fw-bold px-4 mylinks d-flex align-items-center"%>
                  <% if current_client.role == "user" %>
                    <%= link_to 'Mis postulaciones', client_postulations_path(current_client), class: "nav-link fw-bold px-4 mylinks d-flex align-items-center" %>
                  <%end%>
                  <% if current_client.role == "admin" %>
                    <%= link_to "Añadir usuarios", admin_new_client_path, class: "nav-link fw-bold px-4 mylinks d-flex align-items-center" %>
                  <%end%>
                  <%= link_to "Salir", destroy_client_session_path, class: "nav-link fw-bold px-4 mylinks d-flex align-items-center" %>
              <%else%>
                  <%= link_to "Entrar", new_client_session_path, class: "nav-link fw-bold px-4 mylinks d-flex align-items-center" %>
                  
              <%end%>
          </div>
        </div>
      </div>
    </nav>
    
<% if client_signed_in? && (current_client.role == 'admin') %>
<div class="mt-3 ms-3">
    <p class="fw-bold">Bienvenido <%=current_client.name%></p>
    <%= link_to "Nueva publicación", new_article_path, class: "btn mybtn fw-bold text-white mt-3" %>
</div>
<%end%>