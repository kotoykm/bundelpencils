<p style="color: green"><%= notice %></p>

<h1 class="display-4 text-center mydafont">Ofertas publicadas</h1>

<div id="articles" class=" mt-3">
  <%= link_to "Nueva oferta", new_article_path %>
  <div class="row">

    <% @articles.each do |article| %>
    <div id="article-cards" class="col-3 mt-4">
      
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Sueldo: <%= number_to_currency(article.profit, precision: 0)%> pesos. (CLP)</li>
        </ul>
        <div class="card-body">
          <%= link_to "Ver oferta", article, class: "card-link btn mybtn" %>
        </div>
      </div>
      
    
    </div>
    <% end %>

  </div>
</div>


